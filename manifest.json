{
    "name": "CSIT LLM Fraud Checker",
    "version": "1.0",
    "manifest_version": 2,
    "description": "CSIT LLM Fraud Checker",
    "permissions": [
      "identity",
      "contextMenus",
      "background",
      "notifications",
      "*://*.google.com/*",
      "https://www.googleapis.com/*",
      "https://*.googleusercontent.com/*"
    ],
    "background": {
      "scripts": ["base64.js", "background.js"]
    },
    "icons": {
      "16": "./img/icon16.png",
      "32": "./img/icon32.png",
      "48": "./img/icon48.png",
      "128": "./img/icon128.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "./img/icon16.png",
        "32": "./img/icon32.png",
        "48": "./img/icon48.png",
        "128": "./img/icon128.png"
      },
      "default_title": "LLM Fraud Checker for your Emails"
    },
    "content_security_policy": "script-src https://*.google.com 'unsafe-eval'; object-src 'self'",
    "oauth2": {
      "client_id": "<clientid>",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.modify",
        "https://mail.google.com/"
      ]
    }
  }